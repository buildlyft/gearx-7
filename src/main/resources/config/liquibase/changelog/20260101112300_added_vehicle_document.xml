<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!-- =========================================
         Create Vehicle Document Table
    ========================================== -->
    <changeSet id="20260101112300-1" author="Ganesh">

        <createTable tableName="vehicle_document">

            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="machine_id" type="bigint">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="uploaded_by" type="bigint"/>

            <column name="doc_type" type="varchar(100)"/>

            <column name="file_name" type="varchar(512)"/>

            <column name="file_key" type="varchar(1024)"/>

            <column name="content_type" type="varchar(255)"/>

            <column name="size" type="bigint"/>

            <column name="uploaded_at" type="timestamp"/>

            <column name="expires_at" type="timestamp"/>

        </createTable>

        <!-- Foreign Key: Machine -->
        <addForeignKeyConstraint
            baseTableName="vehicle_document"
            baseColumnNames="machine_id"
            constraintName="fk_vehicle_document_machine"
            referencedTableName="machine"
            referencedColumnNames="id"/>

        <!-- Foreign Key: Uploaded By User -->
        <addForeignKeyConstraint
            baseTableName="vehicle_document"
            baseColumnNames="uploaded_by"
            constraintName="fk_vehicle_document_user"
            referencedTableName="jhi_user"
            referencedColumnNames="id"/>

    </changeSet>

    <changeSet author="Ganesh (generated)" id="02012026-1">
        <createSequence
            sequenceName="vehicle_document_seq"
            startValue="1"
            incrementBy="1"/>
    </changeSet>

    <!-- =========================================================
     delete unique constraint on machine_id to allow multiple documents
     FIX: Allow multiple documents per machine
========================================================= -->
    <changeSet id="20260120-remove-machine-unique" author="Ganesh">

        <preConditions onFail="MARK_RAN">
            <uniqueConstraintExists
                tableName="vehicle_document"
                constraintName="vehicle_document_machine_id_key"/>
        </preConditions>

        <dropUniqueConstraint
            tableName="vehicle_document"
            constraintName="vehicle_document_machine_id_key"/>

    </changeSet>

    <changeSet id="202602011543" author="Ganesh">

        <comment>
            Add operator_id column to vehicle_document table
            to link documents with machine operator
        </comment>

        <addColumn tableName="vehicle_document">
            <column name="operator_id" type="bigint"/>
        </addColumn>

        <addForeignKeyConstraint
            baseTableName="vehicle_document"
            baseColumnNames="operator_id"
            constraintName="fk_vehicle_document_operator"
            referencedTableName="machine_operator"
            referencedColumnNames="id"/>

    </changeSet>

    <changeSet id="202602101632" author="Ganesh">

        <preConditions onFail="MARK_RAN">
            <columnExists
                tableName="vehicle_document"
                columnName="operator_id"/>
        </preConditions>

        <!-- Drop FK  -->
        <dropForeignKeyConstraint
            baseTableName="vehicle_document"
            constraintName="fk_vehicle_document_operator"/>

        <!-- Then drop column -->
        <dropColumn
            tableName="vehicle_document"
            columnName="operator_id"/>

    </changeSet>

</databaseChangeLog>
